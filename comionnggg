<!-- ========== SCROLL-TO-TOP ========== -->
<button class="scroll-top" id="scrollTopBtn" aria-label="Back to top">
  <div class="inner"><span class="pct" id="scrollPct">0%</span></div>
</button>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  gsap.registerPlugin(ScrollTrigger);

  // Custom Cursor
  const cursor = document.querySelector('.cursor');
  const cursorFollower = document.querySelector('.cursor-follower');
  
  document.addEventListener('mousemove', (e) => {
    cursor.style.left = (e.clientX - 4) + 'px';
    cursor.style.top = (e.clientY - 4) + 'px';
    
    setTimeout(() => {
      cursorFollower.style.left = (e.clientX - 16) + 'px';
      cursorFollower.style.top = (e.clientY - 16) + 'px';
    }, 60);
  });

  document.addEventListener('mouseover', (e) => {
    const interactive = e.target.closest('a, button, [role="button"], .portfolio-card, .stat-card, .case-study-card, input, textarea');
    if (interactive) {
      cursor.style.transform = 'scale(1.6)';
      cursor.style.opacity = '1';
      cursorFollower.style.transform = 'scale(2.2)';
      cursorFollower.style.borderColor = 'var(--bright-cyan)';
      cursorFollower.style.boxShadow = '0 0 16px var(--bright-cyan), inset 0 0 12px rgba(0,212,255,.4)';
    }
  });

  document.addEventListener('mouseout', (e) => {
    const interactive = e.target.closest('a, button, [role="button"], .portfolio-card, .stat-card, .case-study-card, input, textarea');
    if (interactive) {
      cursor.style.transform = 'scale(1)';
      cursor.style.opacity = '0.8';
      cursorFollower.style.transform = 'scale(1)';
      cursorFollower.style.borderColor = 'var(--bright-cyan)';
      cursorFollower.style.boxShadow = 'inset 0 0 8px rgba(0,212,255,.3)';
    }
  });

  // Navigation scroll behavior
  const nav = document.getElementById('nav');
  window.addEventListener('scroll',()=>{
    window.scrollY>100?nav.classList.add('scrolled'):nav.classList.remove('scrolled')
  });

  // Mobile Menu
  const mobileMenuBtn = document.getElementById('mobileMenuBtn');
  const mobileMenu = document.getElementById('mobileMenu');
  const mobileMenuOverlay = document.getElementById('mobileMenuOverlay');
  const mobileMenuLinks = document.querySelectorAll('.mobile-menu a');

  function closeMobileMenu(){
    mobileMenu.classList.remove('open');
    mobileMenuOverlay.classList.remove('open');
    document.body.style.overflow = 'auto';
  }

  mobileMenuBtn.addEventListener('click', ()=>{
    mobileMenu.classList.contains('open') ? closeMobileMenu() : (mobileMenu.classList.add('open'), mobileMenuOverlay.classList.add('open'), document.body.style.overflow = 'hidden');
  });

  mobileMenuOverlay.addEventListener('click', closeMobileMenu);
  mobileMenuLinks.forEach(link => link.addEventListener('click', closeMobileMenu));

  // Smooth scroll
  document.querySelectorAll('a[href^="#"]').forEach(a=>{
    a.addEventListener('click',e=>{
      const t=document.querySelector(a.getAttribute('href'));
      if(t){e.preventDefault();t.scrollIntoView({behavior:'smooth',block:'start'})}
    });
  });

  // ANIMATIONS
  gsap.to('.hero-title .word',{
    y:0,scale:1,rotation:0,opacity:1,duration:1,stagger:0.06,ease:'power4.out',delay:.05
  });

  gsap.to('.hero-subtitle',{opacity:1,duration:.8,delay:.8});

  gsap.utils.toArray('[data-parallax]').forEach(el=>{
    const amt = +el.getAttribute('data-parallax') || 10;
    gsap.to(el,{y:amt,scrollTrigger:{trigger:'.hero',start:'top top',end:'bottom top',scrub:1}});
  });

  document.querySelectorAll('.title-animate').forEach(title=>{
    gsap.to(title.querySelectorAll('.tword'),{scrollTrigger:{trigger:title,start:'top 82%'},y:0,opacity:1,duration:.55,stagger:.07,ease:'power3.out'});
  });

  gsap.utils.toArray('.portfolio-card').forEach((card,i)=>{
    gsap.to(card,{scrollTrigger:{trigger:card,start:'top 90%'},y:0,opacity:1,duration:.6,delay:i*0.05,ease:'back.out(1.5)'});
  });

  gsap.utils.toArray('.service-item').forEach((item,i)=>{
    gsap.to(item,{scrollTrigger:{trigger:item,start:'top 90%'},y:0,opacity:1,duration:.6,delay:i*0.07,ease:'back.out(1.5)'});
  });

  gsap.to('.featured-project',{scrollTrigger:{trigger:'.featured-section',start:'top 75%'},y:0,opacity:1,duration:.8,ease:'back.out(1.7)'});

  gsap.utils.toArray('.stat-card').forEach((card,i)=>{
    gsap.to(card,{scrollTrigger:{trigger:card,start:'top 90%'},scale:1,opacity:1,duration:.65,delay:i*0.1,ease:'back.out(1.5)'});
  });

  gsap.to('.btn-primary',{scrollTrigger:{trigger:'.cta-section',start:'top 85%'},opacity:1,duration:.6});

  // Swiper
  const caseSwiper = new Swiper('.caseSwiper',{
    slidesPerView:1,
    spaceBetween:30,
    loop:true,
    autoplay:{delay:6000},
    pagination:{el:'.swiper-pagination',clickable:true},
    breakpoints:{
      768:{slidesPerView:2},
      1024:{slidesPerView:3}
    }
  });

  // Scroll-to-top
  const scrollBtn=document.getElementById('scrollTopBtn');
  const scrollPct=document.getElementById('scrollPct');
  let scrollTimeout;

  function setScrollProgress(){
    const st=window.scrollY;
    const h=document.documentElement.scrollHeight - innerHeight;
    const p=h>0?Math.round((st/h)*100):0;
    document.documentElement.style.setProperty('--scroll',p);
    scrollBtn.style.setProperty('--scroll',p);
    scrollPct.textContent=p+'%';
    
    if(st>380){
      scrollBtn.classList.add('visible');
      scrollBtn.classList.add('scrolling');
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(()=>{scrollBtn.classList.remove('scrolling');}, 500);
    } else {
      scrollBtn.classList.remove('visible','scrolling');
      clearTimeout(scrollTimeout);
    }
  }

  setScrollProgress();
  window.addEventListener('scroll',setScrollProgress,{passive:true});
  scrollBtn.addEventListener('click',()=>scrollTo({top:0,behavior:'smooth'}));
</script>

</body>
</html>
